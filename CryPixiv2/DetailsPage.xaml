<Page
    x:Class="CryPixiv2.DetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CryPixiv2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" DataContext="{x:Bind Illustration}"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="887*"/>
            <RowDefinition Height="113*"/>
        </Grid.RowDefinitions>
        
        <ProgressRing x:Name="progress" HorizontalAlignment="Center" VerticalAlignment="Center" Height="70" Width="70" Foreground="Black" Canvas.ZIndex="10"/>
        
        <FlipView x:Name="_flipview" HorizontalAlignment="Center" VerticalAlignment="Center" Height="887" Width="1500" Margin="0,0,0,0" SelectionChanged="_flipview_SelectionChanged">
            <Image x:Name="fullImage" Source="{Binding FullImage, Mode=OneWay}"/>
        </FlipView>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="0" Width="0" Grid.Row="1">
            <TextBlock Text="{x:Bind PageCounter}" FontSize="14" Foreground="Black"></TextBlock>
            <!-- Artist info -->
            <!-- Post info -->
            <!-- Buttons -->
        </Grid>
    </Grid>
</Page>
